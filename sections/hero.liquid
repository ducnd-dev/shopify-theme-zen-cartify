<section class="hero bg-gradient-to-b from-gray-50 to-background py-12 md:py-16 lg:py-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <!-- Text Content -->
      <div class="hero__content max-w-lg">
        <h1 class="hero__title text-3xl md:text-4xl lg:text-5xl font-bold text-text leading-tight mb-4">
          {{ section.settings.heading }}
        </h1>
        
        <div class="hero__subtitle text-gray-600 text-lg mb-6">
          {{ section.settings.subheading }}
        </div>
        
        {% if section.settings.button_text != blank and section.settings.button_link != blank %}
          <div class="hero__cta">
            <a 
              href="{{ section.settings.button_link }}" 
              class="inline-block bg-primary hover:bg-blue-600 text-white font-medium px-6 py-3 rounded-lg transition-colors"
            >
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
      
      <!-- Hero Image -->
      <div class="hero__image">
        {% if section.settings.image != blank %}
          <div class="relative">
            <img 
              src="{{ section.settings.image | image_url: width: 800 }}" 
              alt="{{ section.settings.image_alt | default: section.settings.heading }}"
              class="w-full h-auto rounded-lg shadow-lg"
              width="800"
              height="600"
              loading="eager"
            >
            
            {% if section.settings.show_badge %}
              <div class="absolute -top-4 -right-4 bg-accent text-white text-sm font-bold px-3 py-1 rounded-full transform rotate-6 shadow">
                {{ section.settings.badge_text | default: 'New' }}
              </div>
            {% endif %}
          </div>
        {% else %}
          <div class="w-full h-72 bg-gray-200 rounded-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sống Xanh, Mua Sắm Thông Minh"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Khám phá bộ sưu tập các sản phẩm thời trang bền vững, thân thiện với môi trường và phong cách hiện đại cho cuộc sống hàng ngày của bạn."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Mua Ngay"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show Badge",
      "default": false
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "New"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
