              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.youtube_url != blank %}
            <a href="{{ section.settings.youtube_url }}" class="footer__social-link text-gray-500 hover:text-primary transition-colors" aria-label="YouTube" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Footer Menus -->
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
          <div class="footer__menu">
            <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">
              {{ block.settings.title }}
            </h3>
            <ul class="space-y-2">
              {% for link in block.settings.menu.links %}
                <li>
                  <a href="{{ link.url }}" class="footer__link text-sm text-gray-600 hover:text-primary transition-colors">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
      
      <!-- Newsletter Signup -->
      <div class="footer__newsletter">
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">
          {{ section.settings.newsletter_title }}
        </h3>
        {% if section.settings.newsletter_text != blank %}
          <p class="text-sm text-gray-600 mb-4">
            {{ section.settings.newsletter_text }}
          </p>
        {% endif %}
        
        <form action="{{ routes.account_url }}" method="post" class="newsletter__form" target="_blank">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <div class="flex space-x-2">
            <div class="newsletter__input flex-grow">
              <input
                type="email"
                name="contact[email]"
                id="footerEmailInput"
                placeholder="Your email"
                required
                class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
              >
            </div>
            <button
              type="submit"
              class="newsletter__button bg-primary hover:bg-primary-dark text-white text-sm font-medium px-4 py-2 rounded-lg transition-colors"
            >
              {{ section.settings.newsletter_button_text | default: 'Subscribe' }}
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Bottom Area: Copyright, Payment Icons, etc. -->
    <div class="footer__bottom pt-6 border-t border-gray-200">
      <div class="flex flex-col md:flex-row md:justify-between items-center">
        <!-- Copyright -->
        <div class="footer__copyright text-sm text-gray-500 mb-4 md:mb-0">
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. 
          {% if section.settings.show_powered_by %}
            Powered by <a href="https://shopify.com" class="text-gray-700 hover:text-primary transition-colors">Shopify</a>.
          {% endif %}
        </div>
        
        <!-- Payment Methods -->
        {% if section.settings.show_payment_icons %}
          <div class="footer__payment-icons flex flex-wrap justify-center space-x-4">
            {% for payment_type in shop.enabled_payment_types %}
              <span class="payment-icon">
                {{ payment_type | payment_type_svg_tag: class: 'h-8 w-auto' }}
              </span>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About Text",
      "default": "We offer stylish, high-quality products at affordable prices. Shop our collection today."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Subscribe to Our Newsletter"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Sign up for exclusive offers and updates"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_powered_by",
      "label": "Show Powered by Shopify",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list"
        },
        {
          "type": "link_list"
        }
      ]
    }
  ]
}
{% endschema %}
