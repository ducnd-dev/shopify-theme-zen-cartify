{%- comment -%}
  Footer Section
  Includes navigation links, social media icons, newsletter signup, and copyright information
{%- endcomment -%}

<footer class="footer bg-white border-t border-gray-200 pt-12 pb-6">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- About/Logo Column -->
      <div class="footer__brand">
        <div class="mb-4">
          {% if section.settings.footer_logo != blank %}
            <img 
              src="{{ section.settings.footer_logo | image_url: width: 150 }}" 
              alt="{{ shop.name }}"
              class="h-8 w-auto"
              width="150" 
              height="40" 
              loading="lazy"
            >
          {% else %}
            <span class="text-xl font-bold text-primary font-poppins">{{ shop.name }}</span>
          {% endif %}
        </div>
        
        {% if section.settings.about_text != blank %}
          <p class="text-sm text-gray-600 mb-4">
            {{ section.settings.about_text }}
          </p>
        {% endif %}
        
        <!-- Social Icons -->
        <div class="footer__social flex space-x-4">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" class="footer__social-link text-gray-500 hover:text-primary transition-colors" aria-label="Facebook" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
