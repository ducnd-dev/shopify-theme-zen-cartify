{%- comment -%}
  About Page Template
{%- endcomment -%}

<div class="about py-8 md:py-12">
  <div class="container mx-auto px-4">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ page.title }}</h1>
      
      {% if section.settings.subtitle != blank %}
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    </div>
    
    <!-- Our Story -->
    <div class="about__story mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div class="about__image rounded-lg overflow-hidden">          {% if section.settings.story_image != blank %}
            <img 
              src="{{ section.settings.story_image | img_url: '800x' }}" 
              alt="{{ section.settings.story_title | default: 'Our Story' }}"
              class="w-full h-auto"
              width="800"
              height="600"
              loading="lazy"
            >
          {% else %}
            <div class="w-full h-64 bg-gray-100 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          {% endif %}
        </div>
          <div class="about__text">
          <h2 class="text-2xl font-bold mb-4">{{ section.settings.story_title | default: 'Our Story' }}</h2>
          
          <div class="text-gray-600 space-y-4">
            {{ section.settings.story_text }}
            
            {% unless section.settings.story_text %}
              <p>
                Founded in 2020, ZenCartify began with a simple mission: to provide high-quality, stylish products that combine aesthetic appeal with functionality. What started as a small idea has grown into a brand trusted by customers worldwide.
              </p>
              <p>
                Our journey has been defined by our commitment to quality, sustainability, and customer satisfaction. Every product we offer is carefully designed and selected to ensure it meets our exacting standards.
              </p>
              <p>
                As we've grown, our values have remained constant. We believe in ethical sourcing, fair labor practices, and reducing our environmental footprint. These principles guide every decision we make.
              </p>
            {% endunless %}
          </div>
          
          {% if section.settings.story_signature != blank %}
            <div class="mt-6">              <img 
                src="{{ section.settings.story_signature | img_url: '200x' }}" 
                alt="Founder{% if true %}'{% endif %}s Signature" 
                class="h-16 w-auto"
                width="200"
                height="50"
                loading="lazy"
              >
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Mission & Values -->
    <div class="mission mb-16">
      <h2 class="text-2xl font-bold mb-8 text-center">{{ section.settings.values_title | default: "Our Mission & Values" }}</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {% for block in section.blocks %}
          {% if block.type == 'value' %}
            <div class="value-card bg-white p-6 rounded-lg shadow-sm">
              <div class="value-card__icon mb-4 text-primary">
                {% case block.settings.icon %}
                  {% when 'quality' %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                  {% when 'sustainability' %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  {% when 'innovation' %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  {% when 'community' %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  {% when 'service' %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                    </svg>
                  {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                {% endcase %}
              </div>
              
              <h3 class="value-card__title text-lg font-medium mb-2">
                {{ block.settings.title }}
              </h3>
              
              <p class="value-card__text text-gray-600">
                {{ block.settings.text }}
              </p>
            </div>
          {% endif %}
        {% else %}
          <!-- Default values if none are set -->
          <div class="value-card bg-white p-6 rounded-lg shadow-sm">
            <div class="value-card__icon mb-4 text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="value-card__title text-lg font-medium mb-2">Quality First</h3>
            <p class="value-card__text text-gray-600">We never compromise on quality. Every product undergoes rigorous testing to ensure it meets our exacting standards.</p>
          </div>
          
          <div class="value-card bg-white p-6 rounded-lg shadow-sm">
            <div class="value-card__icon mb-4 text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="value-card__title text-lg font-medium mb-2">Sustainability</h3>
            <p class="value-card__text text-gray-600">We're committed to reducing our environmental impact through sustainable sourcing, eco-friendly packaging, and ethical manufacturing practices.</p>
          </div>
          
          <div class="value-card bg-white p-6 rounded-lg shadow-sm">
            <div class="value-card__icon mb-4 text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="value-card__title text-lg font-medium mb-2">Community</h3>
            <p class="value-card__text text-gray-600">We believe in giving back. A portion of every sale goes to supporting initiatives that empower communities and protect our planet.</p>
          </div>
        {% endfor %}
      </div>
    </div>
    
    <!-- Team Section -->
    <div class="team">
      <h2 class="text-2xl font-bold mb-8 text-center">{{ section.settings.team_title | default: 'Meet Our Team' }}</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for block in section.blocks %}
          {% if block.type == 'team_member' %}
            <div class="team__member text-center">
              <div class="team__avatar mb-4 rounded-full overflow-hidden w-40 h-40 mx-auto">
                {% if block.settings.image != blank %}                  <img 
                    src="{{ block.settings.image | img_url: '160x160', crop: 'center' }}" 
                    alt="{{ block.settings.name }}" 
                    class="w-full h-full object-cover"
                    width="160"
                    height="160"
                    loading="lazy"
                  >
                {% else %}
                  <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                {% endif %}
              </div>
              
              <h3 class="team__name text-lg font-medium">{{ block.settings.name }}</h3>
              <p class="team__position text-gray-600 mb-3">{{ block.settings.position }}</p>
              
              {% if block.settings.bio != blank %}
                <p class="team__bio text-sm text-gray-500">{{ block.settings.bio }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% else %}
          <!-- Default team members if none are set -->
          <div class="team__member text-center">
            <div class="team__avatar mb-4 rounded-full overflow-hidden w-40 h-40 mx-auto">
              <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            </div>
            <h3 class="team__name text-lg font-medium">Sarah Johnson</h3>
            <p class="team__position text-gray-600 mb-3">Founder & CEO</p>
            <p class="team__bio text-sm text-gray-500">With over 15 years in the industry, Sarah founded ZenCartify with a vision to redefine e-commerce.</p>
          </div>
          
          <div class="team__member text-center">
            <div class="team__avatar mb-4 rounded-full overflow-hidden w-40 h-40 mx-auto">
              <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            </div>
            <h3 class="team__name text-lg font-medium">Michael Chen</h3>
            <p class="team__position text-gray-600 mb-3">Design Director</p>
            <p class="team__bio text-sm text-gray-500">Michael leads our design team with an eye for detail and a passion for creating beautiful, functional products.</p>
          </div>
          
          <div class="team__member text-center">
            <div class="team__avatar mb-4 rounded-full overflow-hidden w-40 h-40 mx-auto">
              <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            </div>
            <h3 class="team__name text-lg font-medium">Jessica Rodriguez</h3>
            <p class="team__position text-gray-600 mb-3">Head of Customer Experience</p>
            <p class="team__bio text-sm text-gray-500">Jessica ensures every customer has an exceptional experience from browsing to unboxing.</p>
          </div>
          
          <div class="team__member text-center">
            <div class="team__avatar mb-4 rounded-full overflow-hidden w-40 h-40 mx-auto">
              <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            </div>
            <h3 class="team__name text-lg font-medium">David Thompson</h3>
            <p class="team__position text-gray-600 mb-3">Supply Chain Manager</p>
            <p class="team__bio text-sm text-gray-500">David oversees our global supply chain, ensuring ethical sourcing and sustainable practices.</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Page",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Page Subtitle"
    },
    {
      "type": "header",
      "content": "Our Story Section"
    },
    {
      "type": "text",
      "id": "story_title",
      "label": "Story Title",
      "default": "Our Story"
    },
    {
      "type": "image_picker",
      "id": "story_image",
      "label": "Story Image"
    },
    {
      "type": "richtext",
      "id": "story_text",
      "label": "Story Text"
    },
    {
      "type": "image_picker",
      "id": "story_signature",
      "label": "Founder's Signature (optional)"
    },
    {
      "type": "header",
      "content": "Values Section"
    },
    {
      "type": "text",
      "id": "values_title",
      "label": "Values Section Title",
      "default": "Our Mission & Values"
    },
    {
      "type": "header",
      "content": "Team Section"
    },
    {
      "type": "text",
      "id": "team_title",
      "label": "Team Section Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Value Title",
          "default": "Value Title"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "quality",
              "label": "Quality"
            },
            {
              "value": "sustainability",
              "label": "Sustainability"
            },
            {
              "value": "innovation",
              "label": "Innovation"
            },
            {
              "value": "community",
              "label": "Community"
            },
            {
              "value": "service",
              "label": "Customer Service"
            }
          ],
          "default": "quality"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Value Text"
        }
      ]
    },
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Member Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member Name"
        },
        {
          "type": "text",
          "id": "position",
          "label": "Position",
          "default": "Job Title"
        },
        {
          "type": "textarea",
          "id": "bio",
          "label": "Short Bio"
        }
      ]
    }
  ]
}
{% endschema %}
