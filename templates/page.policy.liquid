{% comment %}
  Policy Page Template
  Filename: templates/page.policy.liquid
  Used for: Policy pages (Privacy Policy, Terms of Service, Shipping Policy, Returns Policy)
{% endcomment %}

<div class="container mx-auto px-4 py-12 md:py-16 max-w-3xl animate-fade-in">
  <div class="bg-white rounded-lg shadow-md overflow-hidden p-6 md:p-8">
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 font-poppins">{{ page.title }}</h1>
      
      <div class="prose prose-lg max-w-none">
        {{ page.content }}
      </div>
    </div>
    
    <div class="flex justify-between items-center pt-6 border-t border-gray-200">
      <a href="/" class="inline-flex items-center text-primary hover:underline">
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        {{ 'general.back_to_home' | t }}
      </a>
      
      <a href="{{ routes.contact_url }}" class="inline-flex items-center text-primary hover:underline">
        {{ 'general.contact_us' | t }}
        <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
